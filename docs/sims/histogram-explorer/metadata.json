  "contributor": [
    "Claude Code"
  ],
  "identifier": "https://dmccreary.github.io/statistics-course/sims/histogram-explorer/",
  "publisher": "MicroSims Educational Platform",
  "educationalLevel": "High School, AP Statistics",
  "learningResourceType": "simulation",
  "audience": "Students, Educators",
  "version": "1.0.0",
  "bloomLevel": [
    "Analyze"
  ],
  "bloomVerb": "examine",
  "learningObjective": "Students will examine how changing bin width affects histogram appearance",
  "concepts": [
    "Histogram",
    "Bin Width",
    "Frequency",
    "Relative Frequency",
    "Data Distribution",
